# SQLite version 3.x
#   gem install sqlite3-ruby (not necessary on OS X Leopard)
development:
  adapter: mysql
  database: money_mg
  pool: 5
  encoding: utf8
  timeout: 5000
  username: root
  password: admin

# Warning: The database defined as "test" will be erased and
# re-generated from your development database when you run "rake".
# Do not set this db to the same as development or production.
test:
  adapter: mysql
  database: money_mg
  pool: 5
  timeout: 5000
  username: root
  password: admin

production:
  adapter: mysql
  database: money_mg
  pool: 5
  timeout: 5000
  username: root
  password: admin
