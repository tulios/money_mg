<h1>Nova categoria</h1>

<% form_for(@category) do |f| %>
  <%= f.error_messages %>
	
	<table>
		<tr>
	    <td><%= f.label :name %></td>
    	<td><%= f.text_field :name %></td>
		</tr>
		<tr>
    	<td>Receita?</td>
	    <td><%= f.check_box :income %></td>
		</tr>
		<tr>
	    <td colspan="2" align="right"><%= f.submit 'Salvar' %></td>
		</tr>
	</table>
<% end %>

<%= link_to 'Voltar', categories_path %>
